{
  "name": "playwright-ts-automation-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true});require('fs').rmSync('reports/output',{recursive:true,force:true})\"",
    "test": "npm run build && npx playwright test --reporter=./dist/reports/reporter.js",
    "test:headed": "npm run build && npx playwright test --reporter=./dist/reports/reporter.js --headed",
    "test:ui": "npx playwright test --ui",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "report:open": "start reports\\output\\index.html",
    "init": "npx playwright install --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^0.16.0",
    "prettier": "^3.3.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "chart.js": "^4.4.1",
    "playwright": "^1.57.0"
  }
}
